#! /bin/bash
# /etc/init.d/p-script
# p-script init.d 

touch /var/lock/p-script
case "$1" in
  start)
        echo "start"
	/etc/p-modules/p-start/*
	;;
  stop)
        echo "stop"
	/etc/p-modules/p-stop/*
	;;
  reload|force-reload)
        echo "reload"
	/etc/p-modules/p-reload/*
	;;
  restart)
        echo "restart"
	/etc/p-modules/p-restart/*
	;;
  status)
        echo "status"
	/usr/bin/p-status
	;;
  *)
	echo "Usage : service p-script status|start|stop|restart|reload "
        exit 1
	;;
esac

exit 0
